{
  "name": "@tolani-bots/hookbot",
  "version": "1.0.0",
  "description": "Self-hosted webhook orchestration engine for Tolani Bots",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "hookbot": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "worker": "node dist/worker.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "migration:generate": "drizzle-kit generate:pg",
    "migration:run": "tsx src/db/migrate.ts",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "webhook",
    "automation",
    "workflow",
    "orchestration",
    "integration",
    "self-hosted",
    "open-source"
  ],
  "author": "Tolani Corp",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "bullmq": "^5.35.0",
    "ioredis": "^5.4.1",
    "drizzle-orm": "^0.33.0",
    "postgres": "^3.4.3",
    "zod": "^3.22.4",
    "axios": "^1.6.5",
    "js-yaml": "^4.1.0",
    "dotenv": "^16.4.5",
    "winston": "^3.14.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/cors": "^2.8.17",
    "typescript": "^5.9.3",
    "tsx": "^4.11.2",
    "vitest": "^1.2.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "drizzle-kit": "^0.22.0"
  }
}
